    <WebView
        android:id="@+id/maxZoomPortal"
        android:layout_gravity="bottom|left"
        android:background="@color/black"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginRight="200dp"
        android:visibility="invisible"/>

    <FrameLayout
        android:id="@+id/MapFrame"
        android:layout_width="1200px"
        android:layout_height="fill_parent"
        android:layout_gravity="center">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/black"
            tools:context="com.botherconsulting.geoconnectable.MapsActivity" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/MaskingFrame"
        android:layout_width="1200px"
        android:layout_height="1200px"
        android:layout_gravity="center"
        android:background="@drawable/mask1200"/>

    <!--
    <com.botherconsulting.geoconnectable.ScaleBarOverlay
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        -->
    <FrameLayout
        android:id="@+id/IdlingFrame"
        android:layout_width="1200px"
        android:layout_height="1200px"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center">

        <com.botherconsulting.geoconnectable.OuterCircleTextView
               android:id="@+id/IdleTopText"
               android:layout_width="match_parent"
              android:background="@android:color/transparent"
            android:shadowColor="#ff0000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0.5"
            android:layout_height="match_parent" />
        <com.botherconsulting.geoconnectable.OuterCircleTextView
               android:id="@+id/IdleBottomText"
               android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:shadowColor="#00ff00"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="0.5"
            android:layout_height="match_parent" />

    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings_Editor_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="@dimen/fab_margin"
        app:fabSize="normal"
        app:backgroundTint="@color/settingsbutton"
        app:rippleColor="@android:color/black" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/hotSpotEditor_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/fab_margin"
        app:fabSize="normal"
        app:backgroundTint="@color/settingsbutton"
        app:rippleColor="@android:color/black" />
    <!--app:srcCompat="@android:drawable/ic_menu_preferences" /> -->
    <!--app:srcCompat="@android:drawable/ic_menu_preferences" /> -->

    <androidx.coordinatorlayout.widget.CoordinatorLayout
       android:id="@+id/LocationParams"
       android:layout_width="200dp"
       android:layout_height="130dp"
       android:layout_marginLeft="@dimen/loc_margin"
       android:layout_marginTop="16dp"
       android:layout_gravity="center_horizontal|top"
       android:background="#44ffffff">

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/currentLongitude"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="1dp"
           android:layout_marginTop="10dp"
           android:background="@android:color/transparent"
           android:gravity="top"
           android:textColor="@color/black"
           android:shadowColor="#ccccff"
           android:shadowDx="1"
           android:shadowDy="1"
           android:shadowRadius="1.5"
           android:text="Longitude: 110.00"
           android:textAlignment="center"
           android:textSize="16dp"
           android:textAppearance="@style/TextAppearance.AppCompat.Medium"
           android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/currentLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude: 40.0"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:shadowColor="#ccccff"
            android:shadowRadius="1.5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="16dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="visible" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/currentLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layer: 40.0"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:shadowColor="#ccccff"
            android:shadowRadius="1.5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="16dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="visible" />

        <com.github.pengrad.mapscaleview.MapScaleView
          android:id="@+id/scaleView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="36dp"
          android:layout_marginTop="80dp"
          app:scale_color="@color/black"
          android:shadowColor="#ccccff"
          android:shadowRadius="1.5"
          android:shadowDx="1"
          android:shadowDy="1"
          app:scale_outline="true"
          app:scale_strokeWidth="3dp"
          app:scale_textSize="16sp"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/DashboardParams"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/loc_margin"
        android:layout_marginTop="300dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@android:color/transparent"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/xtilt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X tilt: 0.0"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:shadowColor="#ccccff"
            android:shadowRadius="1.5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="16dp"
            android:textAlignment="center"
            android:background="#44ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ytilt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Y tilt: 0.0"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:shadowColor="#ccccff"
            android:shadowRadius="1.5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="16dp"
            android:textAlignment="center"
            android:background="#44ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clicks: -1"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            android:shadowColor="#ccccff"
            android:shadowRadius="1.5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="16dp"
            android:textAlignment="center"
            android:background="#44ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible" />
        <!-- can't seem to calculate camera height and there's no topological info in the Google Maps API
        <android.support.v7.widget.AppCompatTextView
             android:id="@+id/currentAltitude"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal|bottom"
             android:text="Altitude: 100km"
             android:layout_marginTop="28dp"
             android:shadowColor="#00ccff"
             android:shadowRadius="1.5"
             android:shadowDx="1"
             android:shadowDy="1"
             android:background="@android:color/transparent"
             android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             android:visibility="visible" /> -->

   </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <FrameLayout
        android:id="@+id/HotSpotFrame"
        android:layout_width="1200px"
        android:layout_height="fill_parent"
        android:layout_gravity="center" >
        <ImageView
            android:id="@+id/hotSpotImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        <WebView
            android:id="@+id/hotSpotWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:visibility="invisible" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
