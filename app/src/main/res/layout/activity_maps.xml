    <FrameLayout
        android:id="@+id/IdlingFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center">

        <com.botherconsulting.geoconnectable.OuterCircleTextView
               android:id="@+id/IdleTopText"
               android:layout_width="match_parent"
              android:background="@android:color/transparent"
            android:shadowColor="#ff0000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0.5"
            android:layout_height="match_parent" />
        <com.botherconsulting.geoconnectable.OuterCircleTextView
               android:id="@+id/IdleBottomText"
               android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:shadowColor="#00ff00"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="0.5"
            android:layout_height="match_parent" />

         </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="@dimen/fab_margin"
        app:fabSize="normal"
        app:backgroundTint="@color/settingsbutton"
        app:rippleColor="@android:color/black" />
    <!--app:srcCompat="@android:drawable/ic_menu_preferences" /> -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="@dimen/fab_margin"
        app:fabSize="normal"
        app:backgroundTint="@color/settingsbutton"
        app:rippleColor="@android:color/black">
        <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.android_examples.com.gridlayout.MainActivity"
            app:columnCount="6"
            app:rowCount="3">
            <TextView
                android:id="@+id/textView1"
                android:text="Label"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="30dp"
                app:layout_row="0"
                app:layout_column="0" />
            <TextView
                android:id="@+id/textView2"
                android:text="Set"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="30dp"
                app:layout_row="0"
                app:layout_column="1" />
            <TextView
                android:id="@+id/textView3"
                android:text="Latitude"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="30dp"
                app:layout_row="0"
                app:layout_column="2" />
            <TextView
                android:id="@+id/textView4"
                android:text="Longitude"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="30dp"
                app:layout_row="0"
                app:layout_column="3" />
            <TextView
                android:id="@+id/textView5"
                android:text="URL"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="30dp"
                app:layout_row="0"
                app:layout_column="4" />
            <TextView
                android:id="@+id/textView6"
                android:text="Enable"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="30dp"
                app:layout_row="0"
                app:layout_column="5" />
            <TextView
                android:id="@+id/textView7"
                android:text="Edit"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="30dp"
                app:layout_row="0"
                app:layout_column="6" />
        </android.support.v7.widget.GridLayout>
    </android.support.design.widget.FloatingActionButton>
    <!--app:srcCompat="@android:drawable/ic_menu_preferences" /> -->

    <android.support.design.widget.CoordinatorLayout
       android:id="@+id/LocationParams"
       android:layout_width="160dp"
       android:layout_height="80dp"
       android:layout_marginLeft="@dimen/loc_margin"
       android:layout_marginTop="16dp"
       android:layout_gravity="center_horizontal|top"
       android:background="#44ffffff">

       <android.support.v7.widget.AppCompatTextView
           android:id="@+id/currentLongitude"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:background="@android:color/transparent"
           android:gravity="top"
           android:textColor="@color/black"
           android:shadowColor="#ccccff"
           android:shadowDx="1"
           android:shadowDy="1"
           android:shadowRadius="1.5"
           android:text="Longitude: 110.00"
           android:textAlignment="center"
           android:textSize="16dp"
           android:textAppearance="@style/TextAppearance.AppCompat.Medium"
           android:visibility="visible" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/currentLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude: 32.0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="28dp"
            android:textColor="@color/black"
            android:shadowColor="#ccccff"
            android:shadowRadius="1.5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="16dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="visible" />
      <com.github.pengrad.mapscaleview.MapScaleView
          android:id="@+id/scaleView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="52dp"
          android:layout_marginTop="53dp"
          app:scale_color="@color/black"
          android:shadowColor="#ccccff"
          android:shadowRadius="1.5"
          android:shadowDx="1"
          android:shadowDy="1"
          app:scale_miles="false"
          app:scale_strokeWidth="3dp"
          app:scale_textSize="16sp"/>
